---
// Importamos las nuevas fuentes modernas
import '@fontsource/poppins';
import '@fontsource/open-sans';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		
		<title>{title}</title>
		
		<meta name="description" content="Kerala Tours AQP - Viajes exclusivos" />
		<meta name="keywords" content="Viajes, Turismo, Arequipa, Kerala, Tours" />
		<meta name="author" content="Rodrigo Prieto" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@import 'tailwindcss';
	@import 'tailwind-animations';

	:root {
		/* AQUI ESTÁ EL CAMBIO: Poppins y Open Sans */
		--font-heading: 'Poppins', sans-serif;
		--font-body: 'Open Sans', sans-serif;
		
		/* Tus colores */
		--color-primary: #AE333C;
		--color-secondary: #FF9A09;
		--bg-dark: #1a1a1a;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: var(--font-body); /* Open Sans para leer fácil */
		background-color: var(--bg-dark);
		color: #e5e5e5;
		scroll-behavior: smooth;
	}

	/* Títulos en Negrita y Geométricos con Poppins */
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-heading);
		font-weight: 700; /* Poppins se ve mejor en negrita */
	}

	* {
		box-sizing: border-box;
	}
</style>